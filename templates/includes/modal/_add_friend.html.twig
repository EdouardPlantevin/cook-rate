<div x-data="{ modalIsOpen: false }">
    <button
        x-on:click="modalIsOpen = true"
        type="button"
        class="whitespace-nowrap rounded-sm bg-black border border-black dark:border-white px-4 py-2 text-center text-sm font-medium tracking-wide text-neutral-100 transition hover:opacity-75 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100 active:outline-offset-0 dark:bg-white dark:text-black dark:focus-visible:outline-white">
        Nouveau copain
    </button>

    <div
        x-cloak
        x-show="modalIsOpen"
        x-transition.opacity.duration.200ms
        x-trap.inert.noscroll="modalIsOpen"
        x-on:keydown.esc.window="modalIsOpen = false"
        x-on:click.self="modalIsOpen = false"
        class="fixed inset-0 z-30 flex items-start justify-center bg-black/20 p-4 pt-8 backdrop-blur-md sm:items-start sm:p-4"
        role="dialog"
        aria-modal="true"
        aria-labelledby="defaultModalTitle"
    >
        <!-- Modal Dialog -->
        <div
            x-show="modalIsOpen"
            x-transition:enter="transition ease-out duration-200 delay-100 motion-reduce:transition-opacity"
            x-transition:enter-start="opacity-0 scale-95"
            x-transition:enter-end="opacity-100 scale-100"
            class="w-full max-w-lg mx-4 sm:mx-0 flex flex-col gap-4 overflow-hidden rounded-sm border border-neutral-300 bg-white text-neutral-600 dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-300"
        >
            <!-- Contenu de la modal -->
            <div class="flex items-center justify-between border-b border-neutral-300 bg-neutral-50/60 p-4 dark:border-neutral-700 dark:bg-neutral-950/20">
                <h3 id="defaultModalTitle" class="text-lg font-semibold tracking-wide text-neutral-900 dark:text-white">
                    Ton code amis: {{ app.user.friendCode }}
                </h3>
                <button x-on:click="modalIsOpen = false" aria-label="close modal">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" stroke="currentColor" fill="none" stroke-width="1.4" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            <form action="{{ path('app_add_friend') }}" method="post">
                <!-- Corps de la modal -->
                <div class="px-4 py-8">
                    <div class="flex flex-col gap-4">
                        <label for="friend_code" class="block text-sm font-medium text-neutral-900 dark:text-white">Code amis</label>
                        <input
                            type="text"
                            id="friend_code"
                            name="friend_code"
                            class="w-full rounded-sm border border-neutral-300 bg-white text-neutral-600 focus:ring-black focus:border-black dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-300 p-2"
                            placeholder="ABCDEF"
                        >
                    </div>
                </div>
                <!-- Pied de la modal -->
                <div class="flex flex-col-reverse justify-between gap-2 border-t border-neutral-300 bg-neutral-50/60 p-4 dark:border-neutral-700 dark:bg-neutral-950/20 sm:flex-row sm:items-center md:justify-end">
                    <button
                        x-on:click="modalIsOpen = false"
                        type="button"
                        class="whitespace-nowrap rounded-sm px-4 py-2 text-center text-sm font-medium tracking-wide text-neutral-600 transition hover:opacity-75 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100 active:outline-offset-0 dark:text-neutral-300 dark:focus-visible:outline-white"
                    >
                        Fermer
                    </button>
                    <button
                        type="submit"
                        class="whitespace-nowrap rounded-sm bg-black border border-black dark:border-white px-4 py-2 text-center text-sm font-medium tracking-wide text-neutral-100 transition hover:opacity-75 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100 active:outline-offset-0 dark:bg-white dark:text-black dark:focus-visible:outline-white"
                    >
                        Ajouter un ami
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
