<header class="bg-white dark:bg-gray-900">
    <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
            <div class="md:flex md:items-center md:gap-12">
                <a class="block text-teal-600 dark:text-teal-600" href="{{ path('app_home') }}">
                    <span class="sr-only">Home</span>
                    <svg class="h-8" viewBox="0 0 28 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <!-- Fourchette -->
                        <path d="M10 10L10 18" stroke="#A9A9A9" stroke-width="1.5" stroke-linecap="round"/>
                        <path d="M8 10L8 18" stroke="#A9A9A9" stroke-width="1.5" stroke-linecap="round"/>
                        <path d="M12 10L12 18" stroke="#A9A9A9" stroke-width="1.5" stroke-linecap="round"/>
                        <path d="M7 18L13 18" stroke="#A9A9A9" stroke-width="1.5" stroke-linecap="round"/>

                        <!-- Couteau -->
                        <path d="M18 10L18 18" stroke="#A9A9A9" stroke-width="1.5" stroke-linecap="round"/>
                        <path d="M18 10L14 10" stroke="#A9A9A9" stroke-width="1.5" stroke-linecap="round"/>
                        <path d="M14 10L14 14" stroke="#A9A9A9" stroke-width="1.5" stroke-linecap="round"/>
                        <path d="M14 14L18 18" stroke="#A9A9A9" stroke-width="1.5" stroke-linecap="round"/>

                        <!-- Cercle pour symboliser l'assiette -->
                        <circle cx="14" cy="14" r="10" stroke="#FFD700" stroke-width="1.5" fill="none"/>
                    </svg>

                </a>
            </div>

            <div class="hidden md:block">
                <nav aria-label="Global">
                    <ul class="flex items-center gap-6 text-sm">

                        {% if app.user %}
                            <li>
                                <a
                                    class="text-gray-500 transition hover:text-gray-500/75 dark:text-white dark:hover:text-white/75"
                                    href="#"
                                >
                                    Teams
                                </a>
                            </li>
                        {% endif %}


                        <li>
                            <button id="theme-toggle" class="text-gray-500 transition hover:text-gray-500/75 dark:text-white dark:hover:text-white/75">
                                ☀️
                            </button>
                        </li>

                    </ul>
                </nav>
            </div>

            <div class="flex items-center gap-4">
                <div class="sm:flex sm:gap-4">


                    {% if app.user %}
                        <a
                            class="rounded-md bg-teal-600 px-5 py-2.5 text-sm font-medium text-white shadow-sm dark:hover:bg-teal-500"
                            href="{{ path('app_logout') }}"
                        >
                            Deconnexion
                        </a>
                    {% else %}
                        <a
                            class="rounded-md bg-teal-600 px-5 py-2.5 text-sm font-medium text-white shadow-sm dark:hover:bg-teal-500"
                            href="{{ path('app_login') }}"
                        >
                            Connexion
                        </a>
                        <div class="hidden sm:flex">
                            <a
                                class="rounded-md bg-gray-100 px-5 py-2.5 text-sm font-medium text-teal-600 dark:bg-gray-800 dark:text-white dark:hover:text-white/75"
                                href="{{ path('app_register') }}"
                            >
                                Inscription
                            </a>
                        </div>
                    {% endif %}
                </div>

                <div class="block md:hidden">
                    <button
                        class="rounded-sm bg-gray-100 p-2 text-gray-600 transition hover:text-gray-600/75 dark:bg-gray-800 dark:text-white dark:hover:text-white/75"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="size-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>
